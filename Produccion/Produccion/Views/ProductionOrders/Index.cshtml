@model IEnumerable<Produccion.Data.Entities.ProductionOrder>

@{
    ViewData["Title"] = "Index";
}

<h1><i class="fa-solid fa-file-contract"></i> Ordenes de producción</h1>

<p>
    <a asp-action="Create" class="btn btn-dark mb-2" style="float:right">Agregar nueva orden <i class="fa-solid fa-circle-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RawMaterial.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RawMaterial.Fabric)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RawMaterial.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Garment.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidades)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RawMaterial.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RawMaterial.Fabric.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RawMaterial.Color.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Garment.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidades)
            </td>
        </tr>
}
    </tbody>
</table>
