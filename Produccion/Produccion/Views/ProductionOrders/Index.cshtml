@model IEnumerable<Produccion.Data.Entities.ProductionOrder>

@{
    ViewData["Title"] = "Index";
}
<flash dismissable="true" />

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="boton">
    <a asp-action="Create" class="btn btn-dark mb-2">Agregar nueva orden <i class="fa-solid fa-circle-plus"></i></a>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card bg-dark mb-3 " >
            <h3 class="panel-title text-light m-2"><i class="fa-solid fa-file-contract"></i> Ordenes de producción</h3>
            <div class="panel panel-default bg-light">

            
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RawMaterial.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RawMaterial.Fabric)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RawMaterial.Color)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Garment.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unidades)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RawMaterial.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RawMaterial.Fabric.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RawMaterial.Color.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Garment.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unidades)
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
