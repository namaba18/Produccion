@model Produccion.Data.Entities.Garment

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Nueva Prenda</h1>


<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsumoInvUnd" class="control-label"></label>
                <input asp-for="ConsumoInvUnd" type = "number" step="any" class="form-control" />
                <span asp-validation-for="ConsumoInvUnd" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Agregar" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-dark">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
