@model Produccion.Data.Entities.RawMaterial

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Nueva Materia Prima</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
                <br/>
            </div>
            <div class="form-group">
                <label asp-for="Fabrics" class="control-label"></label>
                <input asp-for="Fabrics" class="form-control" />
                <span asp-validation-for="Fabrics" class="text-danger"></span>
                <br/>
            </div>
            <div class="form-group">
                <label asp-for="Colors" class="control-label"></label>
                <input asp-for="Colors" class="form-control" />
                <span asp-validation-for="Colors" class="text-danger"></span>
                <br/>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
