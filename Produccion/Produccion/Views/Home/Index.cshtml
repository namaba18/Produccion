@model Produccion.Models.HomeViewModel

@{
    ViewData["Title"] = "Sistema de Poducción";

}
<flash dismissable="true" />

<div class="head">
    <h1 class="display-4 fw-bold">Sistema de Producción</h1>
    <h5>Empresa Textil.</h5>
</div>

<hr class="separador"/>
@if (User.Identity.IsAuthenticated)
{
    <div  class="module one">
        <div>
            <h4 style="text-align:center">Módulo de consulta de Inventario por Materia Prima</h4>
            <form asp-action="Inventory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RawMaterialId" class="control-label"></label>
                    <select asp-for="RawMaterialId" asp-items="Model.RawMaterials" class="form-control"></select>
                    <span asp-validation-for="RawMaterialId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Consultar inventario" class="btn btn-dark mt-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="module two"  >
        <div>
            <h4 style="text-align:center">Módulo de consulta de Prendas Producidas</h4>
            <form asp-action="Garment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FabricId" class="control-label"></label>
                    <select asp-for="FabricId" asp-items="Model.Fabrics" class="form-control"></select>
                    <span asp-validation-for="FabricId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Consultar prendas" class="btn btn-dark mt-2" />
                </div>
            </form>
        </div>
    </div>
}
